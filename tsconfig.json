{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "baseUrl": "src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "static"
  ],
  "typeRoots": [
    "node_modules/@types",
    "node_modules/web3-typescript-typings",
    "custom_typings"
  ]
}
