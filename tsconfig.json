{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "allowJs": true,
    "baseUrl": "src",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "./node_modules/@types/webpack/index.d.ts",
    "./custom_typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "static"
  ]
}
